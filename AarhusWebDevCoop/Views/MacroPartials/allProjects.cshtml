@inherits Umbraco.Web.Macros.PartialViewMacroPage

@{
	var allProjects = CurrentPage.Site().FirstChild("projectsMain").Children("projectItem").OrderBy("CreateDate desc");
}
	
	@foreach(var item in allProjects){
		<div class="project-details col-lg-3">
			<div class="project-story">
				<a href="@item.Url">
					<div class="project-name"> <h5>@item.Name<h5> </div>
				</a>	
					<div class="project-preview">@Umbraco.Truncate(@item.projectDescription,100) <a href="@item.Url">Read More..</a></div>
					<div class="project-date"> Created: @item.CreateDate </div>
				
			</div>
		</div>
	}


